menuconfig BUZZER
    bool "Buzzer Device Support"
if BUZZER

config BUZZER_PANIC
    bool "Trigger buzzer when panic"
    default y

comment "Buzzer Device Driver"

config BUZZER_PCSPKR
    bool "PC-Speaker buzzer"
    depends on CLKEVT_I8253

config BUZZER_PCSPKR_PANIC
    bool "PC-Speaker panic beep"
    depends on BUZZER_PANIC && BUZZER_PCSPKR

endif # BUZZER
